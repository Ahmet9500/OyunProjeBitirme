@model IEnumerable<Karakter>
@{
    ViewData["Title"] = "Listele";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Listele</h1>
@if (Model.Count() == 0)
{
    <div class="alert alert-danger" role="alert">
        Kayıt Bulunamadı..!
    </div>
}
else
{
    <table class="table">
        <thead>
        <th scope="col">Karakterler</th>
            
            </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-active">
                    ...
                </tr>
                <tr>
                    ...
                </tr>
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.OyunAdı></td>
                    <td><a asp-controller="Karakter" asp-action="Guncelle" asp-route-id="@item.Id" class="btn btn-outline-success"></a>
                    <td></td>
                </tr>
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.OyuncuAdı></td>
                    <td><a asp-controller="Karakter" asp-action="Guncelle" asp-route-id="@item.Id" class="btn btn-outline-success"></a>
                    <td></td>
                </tr>
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.OyuncuOzellikleri></td>
                    <td><a asp-controller="Karakter" asp-action="Guncelle" asp-route-id="@item.Id" class="btn btn-outline-success"></a>
                    <td></td>
                </tr>
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Gucu></td>
                    <td><a asp-controller="Karakter" asp-action="Guncelle" asp-route-id="@item.Id" class="btn btn-outline-success"></a>
                    <td></td>
                </tr>
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Vurus></td>
                    <td><a asp-controller="Karakter" asp-action="Guncelle" asp-route-id="@item.Id" class="btn btn-outline-success"></a>
                    <td></td>
                </tr>
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.FızıkselOzellik></td>
                    <td><a asp-controller="Karakter" asp-action="Guncelle" asp-route-id="@item.Id" class="btn btn-outline-success"></a>
                    <td></td>
                </tr>
                
            }
        </tbody>
    </table>
}

