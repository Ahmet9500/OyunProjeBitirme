@model IEnumerable<Oyun>
@{
    ViewData["Title"] = "Listele";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Oyunları Listele</h1>
@if (Model.Count() == 0)
{
    <div class="alert alert-danger" role="alert">
        Kayıt Bulunamadı..!
    </div>
}
else
{
    <table class="table">
        <thead>
           <th scope="col">Oyun Adı
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-active">
                    ...
                </tr>
                <tr>
                    ...
                </tr>
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.OyunAdı></td>
                    <td ><a asp-controller="Oyun" asp-action="Guncelle" asp-route-id="@item.Id" class="btn btn-outline-success"></a>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
}

