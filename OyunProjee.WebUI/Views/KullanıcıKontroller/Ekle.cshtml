@model Kullanıcı
@{
    ViewData["Title"] = "Ekle";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Ekle</h1>
@if (ViewBag.KullanıcıError != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.KullanıcıAddError
    </div>
}
else
{
    <form asp-controller="Karakter" asp-action="Ekle" method="post">
        <div class="form-group">
            <label>KullanıcıAdı</label>
            <input type="text" name="KullanıcıAdı" placeholder="Kullanıcı Adını Giriniz">
            
        </div>
        <div class="form-group">
            <label>KullanıcıSoyadı</label>
            <input type="text" name="KullanıcıSoyadı" placeholder="Kullanıcı Soyadını Giriniz">

        </div>
        <div class="form-group">
            <label>Şifre</label>
            <input type="password" name="Sifre" placeholder="Password">
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Check me out</label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
}

